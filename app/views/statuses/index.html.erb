<div class="page-header">
  <h1>All Statuses</h1>
</div>

<%= link_to "Create Status", new_status_path, class:"btn btn-success" %>

<% @statuses.each do |status| %>

<div class="status">
  <h3> <%= link_to status.name, status %></h3>
  <p> <%= status.content %></p>
  <div class="meta">
    <%= time_ago_in_words(status.created_at) + " ago" %> 
    <%= link_to "Edit", edit_status_path(status) %>
    <%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure ?"} %>
  </div>
</div>

<% end %>